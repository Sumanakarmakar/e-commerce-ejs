<a href="/admin/category/list">
    <button class="btn btn-success mt-4">Back to Category table</button>
  </a>
  
  <% if (successMessage && successMessage.length > 0) { %>
  <div class="alert alert-success mt-3" role="alert"><%= successMessage %></div>
  <% } %>
  
  <!-- Display error message if available -->
  <% if (errorMessage && errorMessage.length > 0) { %>
  <div class="alert alert-danger mt-3" role="alert"><%= errorMessage %></div>
  <% } %>
  
  <table
    class="table table-bordered table-responsive-sm table-responsive-md table-responsive-lg"
  >
    <thead class="">
      <tr>
        <th scope="col">Sl. No.</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Category</th>
        <th scope="col">Price</th>
        <th scope="col">Stock</th>
        <th scope="col">Image</th>
        <th scope="col" colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% let count=1 %> 
      <% if(products.products.length>0){ %> 
        <% products.products.forEach((item,index)=>{ %>
      <tr>
        <th scope="row"><%= count++ %></th>
        <td><%= item.title %></td>
        <td><%= item.description.slice(0,30) %>...</td>
        <td><%= products.catName %></td>
        <td><%= item.price %></td>
        <td><%= item.stock %></td>
        <td><img src="/backend/<%= item.image[0] %>" alt="pImg"></td>
  
        <td>
          <a href="/admin/category/edit/<%= item._id %>">
            <button id="update_btn" class="btn btn-primary">Edit</button>
          </a>
          <a href="/admin/category/remove/<%= item._id %>">
            <button id="update_btn" class="btn btn-danger">Delete</button>
          </a>
        </td>
      </tr>
      <% }) %> 
      <% }else{ %>
      <td colspan="8">
        <h3 class="text-center">No Product Found for this Category</h3>
      </td>
      <% } %>
    </tbody>
  </table>
  