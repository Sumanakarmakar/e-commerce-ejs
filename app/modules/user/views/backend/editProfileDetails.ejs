<div class="row">
  <!-- Display success message if available -->
  <% if (successMessage && successMessage.length > 0) { %>
  <div class="alert alert-success mt-2" role="alert"><%= successMessage %></div>
  <% } %>

  <!-- Display error message if available -->
  <% if (errorMessage && errorMessage.length > 0) { %>
  <div class="alert alert-danger mt-2" role="alert"><%= errorMessage %></div>
  <% } %>
  <div class="container mt-5 d-flex align-items-center justify-content-center">
    <div
      class="card d-flex align-items-center justify-content-center"
      style="width: 500px"
    >
      <h2 class="py-3">Edit Profile Details</h2>
      <form
        action="/admin/profile/update/<%= detaildata.id %>"
        method="post"
        style="width: 80%"
      >
        <div class="form-group">
          <label for="">Name</label>
          <input
            type="text"
            class="form-control pb-3"
            name="name"
            value="<%= detaildata.name %>"
          />
        </div>
        <div class="form-group">
          <label for="">Email</label>
          <input
            type="email"
            class="form-control pb-3"
            name="email"
            value="<%= detaildata.email %>"
            disabled
          />
        </div>
        <div class="form-group">
          <label for="">Phone No.</label>
          <input
            type="number"
            class="form-control pb-3"
            name="phone"
            value="<%= detaildata.phone %>"
          />
        </div>

        <button type="submit" class="btn btn-warning mb-3">Save Changes</button>
      </form>
    </div>
  </div>
</div>
